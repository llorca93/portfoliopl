{% extends 'baseAdmin.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}

        <div>
            <h1 class="pb-5">Liste des projets</h1>

            <table class="table table-bordered table-dark text-center table-hover table-sm">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for projet in projets %}
                        <tr>
                            <td class="align-middle">{{ loop.index }}</td>
                            <td class="align-middle">{{ projet.titre }}</td>
                            <td class="align-middle">{{ projet.description|u.truncate(50, '...') }}</td>
                            <td class="align-middle"><img src="{{ asset('img/projet/') ~ projet.image }}" alt="photo principale projet"></td>
                            
                            
                            <td class="align-middle">
                                <a href="{{ path('admin_projets_update', {'id':projet.id}) }}"><i class="fas fa-pen-square"></i></a>
                                <a href="{{ path('admin_projets_delete', {'id':projet.id}) }}"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="text-right my-5">
                <a href="{{ path('admin_projets_create') }}" class="btn btn-outline-dark">Ajouter un projet</a>
            </div>
        </div>

{% endblock %}

